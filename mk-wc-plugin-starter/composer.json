{
    "name": "wp-migrate/plugin",
    "description": "Secure WordPress migration plugin with HMAC authentication",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Vidar Brekke",
            "email": "vidar@motherknitter.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "php-mock/php-mock-mockery": "^1.3",
        "mockery/mockery": "^1.4",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WpMigrate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WpMigrate\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html=coverage",
        "test-unit": "phpunit --testsuite=unit",
        "test-integration": "phpunit --testsuite=integration",
        "test-security": "phpunit --testsuite=security"
    }
}
